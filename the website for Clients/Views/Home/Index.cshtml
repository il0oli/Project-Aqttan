@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<div class="dashboard-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>AQTTan Dashboard</h2>
        <ul class="sidebar-menu">
            <li><a class="navbar-brand" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a class="nav-link text-dark" asp-controller="Compos" asp-action="Index">Components</a></li>
            <li><a class="nav-link text-dark" asp-controller="Items" asp-action="Index">Your Items</a></li>
        </ul>
        <ul class="sidebar-bottom">
            <li><a asp-controller="Account" asp-action="Index">Account</a></li>
            <li id="end"><a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
        </ul>
    </div>

    <div class="main-content">
        <div class="header">
            <h2>Home Page</h2>
            <div class="user-info">
                <span>Welcome!</span>
            </div>
        </div>

        <!-- Logout Card -->
        <div class="logout-container">
            <form asp-controller="Account" asp-action="Logout" method="post" class="logout-card">
                @* <img src="~/images/Admin.jpg" alt="Profile Picture" class="profile-pic"> *@
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>

        <div class="content">
            <div class="card">
                <div class="card-header">
                    <div class="card-details">
                        <h3>Your Components</h3>
                    </div>
                </div>
                <div class="card-actions">
                    <a href="@Url.Action("Create", "Compos")" class="btn add-btn">New Component</a>
                    <a asp-controller="Compos" asp-action="Index" class="details-link">Details</a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="card-details">
                        <h3>Your Items</h3>
                    </div>
                </div>
                <div class="card-actions">
                    <a href="@Url.Action("Create", "Items")" class="btn add-btn">New Item</a>
                    <a asp-controller="Items" asp-action="Index" class="details-link">Details</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7f6;
        margin: 0;
        padding: 0;
    }

    .dashboard-container {
        display: flex;
    }

    .sidebar {
        width: 130px;
        background-color: #6E2424;
        color: #fff;
        height: 100vh;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: fixed;
        border-radius: 0px 15px 0px 0px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .sidebar h2 {
            text-align: center;
            font-size: 20px;
            margin-bottom: 10px;
        }

    .sidebar-menu {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

        .sidebar-menu li {
            margin-bottom: 20px;
        }

            .sidebar-menu li a {
                color: #fff;
                text-decoration: none;
                font-size: 14px;
                display: block;
                padding: 10px;
                border-radius: 5px;
                transition: background 0.3s;
            }

                .sidebar-menu li a:hover {
                    background-color: #3e241f;
                }

    .sidebar-bottom {
        list-style-type: none;
        padding: 0;
    }

        .sidebar-bottom li {
            margin-bottom: 20px;
        }

            .sidebar-bottom li a {
                color: #fff;
                text-decoration: none;
                font-size: 14px;
                display: block;
                padding: 10px;
                border-radius: 5px;
                transition: background 0.3s;
            }

                .sidebar-bottom li a:hover {
                    background-color: #3e241f;
                }

    .main-content {
        margin-left: 170px;
        padding: 100px;
        width: calc(100% - 130px);
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .user-info {
        display: flex;
        align-items: center;
    }

        .user-info span {
            margin-right: 10px;
        }

    .logout-container {
        position: fixed;
        bottom: 20px;
        right: 50px;
    }

    .logout-card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 10px;
        display: flex;
       
        
        max-width: 200px;
    }

        /* .logout-card img {
            width: 30px;
            height: 30px;
            border-radius: 50%;
        } */

    .logout-button {
        text-align: center;
        background-color: transparent;
        border: none;
        color: #6c757d;
        font-weight: bold;
        font-size: 8px;
        cursor: pointer;
       
    }

        .logout-button:hover {
            color: #ff3333;
        }

    .content {
        margin-top: 20px;
    }

    .card {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        padding: 15px 20px;
        align-items: center;
    }

        

    .card-header {
        display: flex;
        align-items: center;
    }

    .card-details h3 {
        margin: 0;
        font-size: 14px;
    }

    .card-actions .btn {
        background-color: #6cd98e;
        font-size: 12px;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        text-align:center;
    }

        .card-actions .btn:hover {
            background-color: #5ec57b;
        }

    .details-link {
        font-size: 12px;
        margin-left: 15px;
        color: #5ec57b;
        text-decoration: none;
    }

        .details-link:hover {
            text-decoration: underline;
        }
</style>


